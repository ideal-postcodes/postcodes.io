{
  "compilerOptions": {
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "target": "es2015",
    "lib": ["DOM", "es6"],
    "noImplicitAny": true,
    "moduleResolution": "node",
    "allowJs": true,
    "sourceMap": false,
    "outDir": "dist",
    "baseUrl": ".",
    "rootDir": "api",
    "noEmit": false,
    "skipLibCheck": true,
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": ["api/**/*"],
  "exclude": ["node_modules/@types/mdx", "node_modules/@docusaurus"]
}
